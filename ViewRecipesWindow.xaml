<Window x:Class="RecipeApp.ViewRecipesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="View Recipes" Height="300" Width="400">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Brown_Board.jpg"/>
        </Grid.Background>
        <ListBox Name="RecipesListBox" Margin="10" SelectionChanged="RecipesListBox_SelectionChanged" Background="{x:Null}" FontFamily="Gabriola" />
    </Grid>
</Window>
