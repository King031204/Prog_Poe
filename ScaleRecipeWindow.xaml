<Window x:Class="RecipeApp.ScaleRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Scale Recipe" Height="300" Width="400">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/menu_table.jpg"/>
        </Grid.Background>
        <StackPanel Margin="10">
            <Label Content="Select a Recipe to Scale:" Foreground="White" FontWeight="Bold"/>
            <ComboBox Name="RecipeComboBox" Margin="5"/>
            <Label Content="Scaling Factor:" FontWeight="Bold" Foreground="White"/>
            <TextBox Name="ScalingFactorTextBox" Margin="5"/>
            <Button Name="ScaleButton" Content="Scale Recipe" Click="ScaleButton_Click" Margin="10" FontFamily="Gabriola" FontWeight="Bold" Foreground="White" BorderBrush="{x:Null}" Background="{x:Null}"/>
        </StackPanel>
    </Grid>
</Window>
