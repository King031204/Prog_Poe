<Window x:Class="RecipeApp.ChooseRecipeWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Choose Recipe" Height="300" Width="400">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Brown_Board.jpg"/>
        </Grid.Background>
        <ListBox Name="ChooseRecipeListBox" Margin="10" Background="{x:Null}" BorderBrush="{x:Null}" />
        <Button Name="SelectRecipeButton" Content="Select" Click="SelectRecipeButton_Click" Margin="10" VerticalAlignment="Bottom" HorizontalAlignment="Center"/>
    </Grid>
</Window>
