<Window x:Class="RecipeApp.EnterIngredientWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Enter Ingredient Details" Height="400" Width="400">
    <Grid>
        <Grid.Background>
            <ImageBrush ImageSource="/Recipe_Background.jpg"/>
        </Grid.Background>
        <StackPanel Margin="10">
            <Label Content="Ingredient Name:" FontWeight="Bold" Foreground="White"/>
            <TextBox Name="IngredientNameTextBox" Margin="5"/>
            <Label Content="Quantity:" FontWeight="Bold" Foreground="White"/>
            <TextBox Name="QuantityTextBox" Margin="5"/>
            <Label Content="Unit:" FontWeight="Bold" Foreground="White"/>
            <TextBox Name="UnitTextBox" Margin="5"/>
            <Label Content="Calories:" FontWeight="Bold" Foreground="White"/>
            <TextBox Name="CaloriesTextBox" Margin="5"/>
            <Label Content="Food Group:" FontWeight="Bold" Foreground="White"/>
            <TextBox Name="FoodGroupTextBox" Margin="5"/>
            <Button Name="AddIngredientButton" Content="Add Ingredient" Click="AddIngredientButton_Click" Margin="10"/>
        </StackPanel>
    </Grid>
</Window>
